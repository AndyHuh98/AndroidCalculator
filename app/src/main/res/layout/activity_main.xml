<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="49dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/calculatorResult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="415dp"
        android:layout_height="529dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#ff000000">

        <LinearLayout
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="C"
                android:onClick="onClearPress"/>

            <Button
                android:id="@+id/btnNum7"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="7"
                android:onClick="onNumButtonPress"/>

            <Button
                android:id="@+id/btnNum4"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="4"
                android:onClick="onNumButtonPress"/>

            <Button
                android:id="@+id/btnNum1"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="1"
                android:onClick="onNumButtonPress"/>

            <Button
                android:id="@+id/btnNum0"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="0"
                android:onClick="onNumButtonPress"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPositiveNegative"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="+/-"
                android:onClick="onPosNegPress"/>

            <Button
                android:id="@+id/btnNum8"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="8"
                android:onClick="onNumButtonPress"/>

            <Button
                android:id="@+id/btnNum5"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="5"
                android:onClick="onNumButtonPress"/>

            <Button
                android:id="@+id/btnNum2"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="2"
                android:onClick="onNumButtonPress"/>

            <Button
                android:id="@+id/btnFloatPoint"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="."
                android:onClick="onDecimalButtonPress"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="BACK"
                android:onClick="onBackspacePress"/>

            <Button
                android:id="@+id/btnNum9"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="9"
                android:onClick="onNumButtonPress"/>

            <Button
                android:id="@+id/btnNum6"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="6"
                android:onClick="onNumButtonPress"/>

            <Button
                android:id="@+id/btnNum3"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="3"
                android:onClick="onNumButtonPress"/>

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:text="="
                android:onClick="onEqualsBtnPress"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:text="/"
                android:onClick="onOperatorButtonPress"/>

            <Button
                android:id="@+id/btnMultiplyOp"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:text="*"
                android:onClick="onOperatorButtonPress"/>

            <Button
                android:id="@+id/btnSubtractOp"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:text="-"
                android:onClick="onOperatorButtonPress"/>

            <Button
                android:id="@+id/btnAddOp"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:text="+"
                android:onClick="onOperatorButtonPress"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>